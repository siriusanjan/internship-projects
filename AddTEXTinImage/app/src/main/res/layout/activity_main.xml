<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <com.example.homay.addtextinimage.CustomCanvas
            android:id="@+id/custom_canvas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:background="#818181" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_text_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="#6e0065" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="6">


            <TextView
                android:id="@+id/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3c5942"
                android:padding="3dp"
                android:text="Text Color"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_highlight_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#485fba"
                android:padding="3dp"
                android:text="Highlight Color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#73158b"
                android:padding="3dp"
                android:text="Text Size"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#8aba9e"
                android:padding="3dp"
                android:text="Width"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffc086"
                android:padding="3dp"
                android:text="Height"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#bfb6b6"
                android:padding="3dp"
                android:text="Corner"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>